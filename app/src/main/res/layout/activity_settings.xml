<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_white_gray">

<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:fillViewport="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text=""
            app:icon="@android:drawable/ic_menu_revert"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:backgroundTint="@color/button_white"
            app:iconTint="@color/primary_blue"
            android:elevation="4dp"
            style="@style/Widget.Material3.Button.IconButton" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ayarlar"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:layout_marginEnd="48dp" />

    </LinearLayout>

    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="@color/primary_blue"
        app:tabTextColor="@color/text_dark"
        app:tabIndicatorColor="@color/primary_blue"
        app:tabBackground="@color/theme_white_gray">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tema" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hatırlatma" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Güncelleme" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Tema Seçimi Bölümü -->
    <LinearLayout
        android:id="@+id/themeSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
    <TextView
        android:id="@+id/tvThemeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema Seçimi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:layout_marginBottom="16dp" />

    <!-- Tema Butonları Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_marginBottom="24dp"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="false">

        <!-- Beyaz/Gri Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeWhiteGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Beyaz/Gri"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            app:backgroundTint="@color/theme_white_gray"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Açık Mavi Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeLightBlue"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Açık Mavi"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            app:backgroundTint="@color/theme_light_blue"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Açık Sarı Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeLightYellow"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Açık Sarı"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            app:backgroundTint="@color/theme_light_yellow"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Açık Pembe Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeLightPink"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Siyah-Beyaz"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            app:backgroundTint="@color/theme_light_pink"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Açık Yeşil Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeLightGreen"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Açık Yeşil"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            app:backgroundTint="@color/theme_light_green"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Kırmızı Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeRed"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Kırmızı"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            app:backgroundTint="@color/theme_red"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Navy Blue Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeNavyBlue"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Navy Blue"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            app:backgroundTint="@color/theme_navy_blue"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Siyah Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeBlack"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Siyah"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            app:backgroundTint="@color/theme_black"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

    </GridLayout>

    <!-- Hatırlatma Ayarları Kartı -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hatırlatma Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="16dp" />

            <!-- Hatırlatma Metni -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hatırlatma Metni:"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etReminderText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Diyaliz"
                    android:maxLength="20"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Hatırlatma Günleri -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hatırlatma Günleri:"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="2"
                android:layout_marginBottom="16dp">

                <CheckBox
                    android:id="@+id/cbMonday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Pzt"
                    android:textSize="14sp"
                    android:layout_margin="4dp" />

                <CheckBox
                    android:id="@+id/cbTuesday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Sal"
                    android:textSize="14sp"
                    android:layout_margin="4dp" />

                <CheckBox
                    android:id="@+id/cbWednesday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Çar"
                    android:textSize="14sp"
                    android:layout_margin="4dp" />

                <CheckBox
                    android:id="@+id/cbThursday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Per"
                    android:textSize="14sp"
                    android:layout_margin="4dp" />

                <CheckBox
                    android:id="@+id/cbFriday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Cum"
                    android:textSize="14sp"
                    android:layout_margin="4dp" />

                <CheckBox
                    android:id="@+id/cbSaturday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Cmt"
                    android:textSize="14sp"
                    android:layout_margin="4dp" />

                <CheckBox
                    android:id="@+id/cbSunday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Paz"
                    android:textSize="14sp"
                    android:layout_margin="4dp" />

            </GridLayout>

            <!-- Hatırlatmayı Kaydet Butonu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveReminder"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Hatırlatmayı Kaydet"
                android:textSize="16sp"
                app:backgroundTint="@color/primary_blue"
                app:cornerRadius="12dp"
                android:elevation="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Güncelleme Ayarları Kartı -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Güncelleme Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="16dp" />

            <!-- Manuel Güncelleme Kontrolü -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckForUpdates"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:text="Güncelleme Kontrol Et"
                android:textSize="16sp"
                app:backgroundTint="@color/theme_light_blue"
                app:cornerRadius="12dp"
                android:elevation="4dp" />

            <!-- Version Text -->
            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="v1.0.10"
                android:textSize="12sp"
                android:textColor="@color/text_dark"
                android:alpha="0.7" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>



</LinearLayout>

</ScrollView>

<!-- Sağ alt tarafa hizalanmış buton container -->
<LinearLayout
    android:id="@+id/buttonContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>