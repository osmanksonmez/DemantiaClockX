<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/theme_white_gray">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text=""
            app:icon="@android:drawable/ic_menu_revert"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:backgroundTint="@color/button_white"
            app:iconTint="@color/primary_blue"
            android:elevation="4dp"
            style="@style/Widget.Material3.Button.IconButton" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ayarlar"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:layout_marginEnd="48dp" />

    </LinearLayout>

    <!-- Tema Seçimi Bölümü -->
    <TextView
        android:id="@+id/tvThemeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema Seçimi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:layout_marginBottom="16dp" />

    <!-- Tema Butonları Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_marginBottom="24dp">

        <!-- Beyaz/Gri Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeWhiteGray"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Beyaz/Gri"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            app:backgroundTint="@color/theme_white_gray"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Açık Mavi Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeLightBlue"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Açık Mavi"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            app:backgroundTint="@color/theme_light_blue"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Açık Sarı Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeLightYellow"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Açık Sarı"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            app:backgroundTint="@color/theme_light_yellow"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Açık Pembe Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeLightPink"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Açık Pembe"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            app:backgroundTint="@color/theme_light_pink"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Kırmızı Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeRed"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Kırmızı"
            android:textColor="@color/text_light"
            android:textSize="16sp"
            app:backgroundTint="@color/theme_red"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Navy Blue Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeNavyBlue"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Navy Blue"
            android:textColor="@color/text_light"
            android:textSize="16sp"
            app:backgroundTint="@color/theme_navy_blue"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

        <!-- Siyah Tema -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThemeBlack"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Siyah"
            android:textColor="@color/text_light"
            android:textSize="16sp"
            app:backgroundTint="@color/theme_black"
            android:elevation="4dp"
            app:cornerRadius="12dp" />

    </GridLayout>

    <!-- Güncelleme Ayarları -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Güncelleme Ayarları"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <!-- Manuel Güncelleme Kontrolü -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckForUpdates"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:text="Güncelleme Kontrol Et"
        android:textSize="16sp"
        app:backgroundTint="@color/theme_light_blue"
        app:cornerRadius="12dp"
        android:elevation="4dp" />

    <!-- Otomatik Güncelleme Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Otomatik Güncelleme"
            android:textSize="16sp"
            android:textColor="@color/text_dark" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchAutoUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>

</LinearLayout>