<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_white_gray">

<LinearLayout
    android:id="@+id/mainContent"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:padding="32dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Sol Panel - Header ve Güncelleme Ayarları -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:paddingEnd="24dp"
        android:gravity="top">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="48dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text=""
                app:icon="@android:drawable/ic_menu_revert"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp"
                app:backgroundTint="@color/button_white"
                app:iconTint="@color/primary_blue"
                android:elevation="6dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.Button.IconButton" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ayarlar"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:gravity="center"
                android:layout_marginEnd="4dp" />

        </LinearLayout>

        <!-- Vertical Tab Layout -->
        <LinearLayout
            android:id="@+id/verticalTabContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tabTheme"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Tema"
                android:textColor="@color/primary_blue"
                android:textSize="13sp"
                android:layout_marginBottom="3dp"
                app:backgroundTint="@color/theme_light_blue"
                app:cornerRadius="8dp"
                app:rippleColor="@color/theme_light_blue"
                android:gravity="center"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tabReminder"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Hatırlatma"
                android:textColor="@color/text_dark"
                android:textSize="13sp"
                android:layout_marginBottom="3dp"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="8dp"
                app:rippleColor="@color/theme_light_blue"
                android:gravity="center"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tabUpdate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Güncelleme"
                android:textColor="@color/text_dark"
                android:textSize="13sp"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="8dp"
                app:rippleColor="@color/theme_light_blue"
                android:gravity="center"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

        <!-- Boş alan için spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Sağ Panel - Tema Seçimi -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:gravity="top">

        <!-- Tema Bölümü -->
        <LinearLayout
            android:id="@+id/themeSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Tema Seçimi Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Tema Seçimi Başlığı -->
                    <TextView
                        android:id="@+id/tvThemeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:text="Tema Seçimi"
                        android:textColor="@color/text_dark"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Tema Butonları - Tablet için 2 satır LinearLayout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <!-- İlk Satır -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <!-- Beyaz/Gri Tema -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnThemeWhiteGray"
                                android:layout_width="0dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:elevation="6dp"
                                android:text="Beyaz/Gri"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:backgroundTint="@color/theme_white_gray"
                                app:cornerRadius="16dp" />

                            <!-- Açık Mavi Tema -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnThemeLightBlue"
                                android:layout_width="0dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:elevation="6dp"
                                android:text="Açık Mavi"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:backgroundTint="@color/theme_light_blue"
                                app:cornerRadius="16dp" />

                            <!-- Açık Sarı Tema -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnThemeLightYellow"
                                android:layout_width="0dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:elevation="6dp"
                                android:text="Açık Sarı"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:backgroundTint="@color/theme_light_yellow"
                                app:cornerRadius="16dp" />

                        </LinearLayout>

                        <!-- İkinci Satır -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Açık Pembe Tema -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnThemeLightPink"
                                android:layout_width="0dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:elevation="6dp"
                                android:text="Açık Pembe"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:backgroundTint="@color/theme_light_pink"
                                app:cornerRadius="16dp" />

                            <!-- Açık Yeşil Tema -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnThemeLightGreen"
                                android:layout_width="0dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:elevation="6dp"
                                android:text="Açık Yeşil"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:backgroundTint="@color/theme_light_green"
                                app:cornerRadius="16dp" />

                            <!-- Kırmızı Tema -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnThemeRed"
                                android:layout_width="0dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:elevation="6dp"
                                android:text="Kırmızı"
                                android:textColor="@color/text_light"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:backgroundTint="@color/theme_red"
                                app:cornerRadius="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <!-- Hatırlatma Bölümü -->
        <LinearLayout
            android:id="@+id/reminderSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Hatırlatma Ayarları Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Hatırlatma Ayarları"
                        android:textColor="@color/text_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etReminderText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/text_dark"
                            android:maxLines="3" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Hatırlatma Günleri -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Hatırlatma Günleri:"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:columnCount="7"
                        android:rowCount="2">

                        <CheckBox
                            android:id="@+id/cbMonday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0"
                            android:layout_margin="4dp"
                            android:text="Pzt"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbTuesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0"
                            android:layout_margin="4dp"
                            android:text="Sal"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbWednesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0"
                            android:layout_margin="4dp"
                            android:text="Çar"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbThursday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0"
                            android:layout_margin="4dp"
                            android:text="Per"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbFriday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0"
                            android:layout_margin="4dp"
                            android:text="Cum"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbSaturday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0"
                            android:layout_margin="4dp"
                            android:text="Cmt"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbSunday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0"
                            android:layout_margin="4dp"
                            android:text="Paz"
                            android:textSize="14sp" />

                    </GridLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveReminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hatırlatmayı Kaydet"
                        android:textColor="@color/text_light"
                        app:backgroundTint="@color/theme_blue"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Güncelleme Bölümü -->
        <LinearLayout
            android:id="@+id/updateSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Güncelleme Ayarları Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Güncelleme Ayarları"
                        android:textColor="@color/text_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCheckUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Güncelleme Kontrol Et"
                        android:textColor="@color/text_light"
                        app:backgroundTint="@color/theme_green"
                        app:cornerRadius="12dp" />

                    <TextView
                        android:id="@+id/tvVersionInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Mevcut Sürüm: v1.0.10"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    <!-- Version Text at Bottom Right -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="v1.0.10"
        android:textSize="12sp"
        android:textColor="@color/text_dark"
        android:alpha="0.7" />

    </LinearLayout>

</LinearLayout>

<!-- Bottom Button Container -->
<LinearLayout
    android:id="@+id/buttonContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="32dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>