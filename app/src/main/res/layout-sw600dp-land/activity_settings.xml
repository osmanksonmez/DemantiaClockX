<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="32dp"
    android:background="@color/theme_white_gray">

    <!-- Sol Panel - Header ve Güncelleme Ayarları -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="32dp"
        android:gravity="top">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="48dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text=""
                app:icon="@android:drawable/ic_menu_revert"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp"
                app:backgroundTint="@color/button_white"
                app:iconTint="@color/primary_blue"
                android:elevation="6dp"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.Button.IconButton" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ayarlar"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:gravity="center"
                android:layout_marginEnd="64dp" />

        </LinearLayout>

        <!-- Güncelleme Ayarları Kartı -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Güncelleme Ayarları"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="24dp" />

                <!-- Manuel Güncelleme Kontrolü -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckForUpdates"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="24dp"
                    android:text="Güncelleme Kontrol Et"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    app:backgroundTint="@color/theme_light_blue"
                    app:cornerRadius="16dp"
                    android:elevation="6dp" />



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Boş alan için spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Sağ Panel - Tema Seçimi -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:gravity="top">

        <!-- Tema Seçimi Kartı -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Tema Seçimi Başlığı -->
                <TextView
                    android:id="@+id/tvThemeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tema Seçimi"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="32dp" />

                <!-- Tema Butonları - Tablet için 2 satır LinearLayout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- İlk Satır -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <!-- Beyaz/Gri Tema -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnThemeWhiteGray"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_margin="8dp"
                            android:text="Beyaz/Gri"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/theme_white_gray"
                            android:elevation="6dp"
                            app:cornerRadius="16dp" />

                        <!-- Açık Mavi Tema -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnThemeLightBlue"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_margin="8dp"
                            android:text="Açık Mavi"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/theme_light_blue"
                            android:elevation="6dp"
                            app:cornerRadius="16dp" />

                        <!-- Açık Sarı Tema -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnThemeLightYellow"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_margin="8dp"
                            android:text="Açık Sarı"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/theme_light_yellow"
                            android:elevation="6dp"
                            app:cornerRadius="16dp" />

                    </LinearLayout>

                    <!-- İkinci Satır -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Açık Pembe Tema -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnThemeLightPink"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_margin="8dp"
                            android:text="Açık Pembe"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/theme_light_pink"
                            android:elevation="6dp"
                            app:cornerRadius="16dp" />

                        <!-- Açık Yeşil Tema -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnThemeLightGreen"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_margin="8dp"
                            android:text="Açık Yeşil"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/theme_light_green"
                            android:elevation="6dp"
                            app:cornerRadius="16dp" />

                        <!-- Kırmızı Tema -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnThemeRed"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_margin="8dp"
                            android:text="Kırmızı"
                            android:textColor="@color/text_light"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/theme_red"
                            android:elevation="6dp"
                            app:cornerRadius="16dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    <!-- Version Text at Bottom Right -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="v1.0.10"
        android:textSize="12sp"
        android:textColor="@color/text_dark"
        android:alpha="0.7" />

    </LinearLayout>

</LinearLayout>